# ProofKit Environment Variables
# Copy this file to .env and fill in your values

# AI Provider: openai or anthropic
AI_PROVIDER=openai
# OPENAI_API_KEY=sk-proj-your-openai-key-here


# =============================================================================
# REQUIRED
# =============================================================================

# Anthropic API key for AI narrative generation
#ANTHROPIC_API_KEY=sk-ant-your-key-here

# =============================================================================
# OPTIONAL - Paths
# =============================================================================

# Output directory for audit runs (default: ./runs)
# PROOFKIT_OUTPUT_DIR=./runs

# Templates directory for report templates (default: ./templates)
# PROOFKIT_TEMPLATES_DIR=./templates

# =============================================================================
# OPTIONAL - Collector Settings
# =============================================================================

# Playwright timeout in milliseconds (default: 60000)
# PROOFKIT_PLAYWRIGHT_TIMEOUT=60000

# Lighthouse throttling mode: mobile|desktop (default: mobile)
# PROOFKIT_LIGHTHOUSE_THROTTLING=mobile

# Max pages for fast mode (default: 5)
# PROOFKIT_MAX_PAGES_FAST=5

# Max pages for full mode (default: 50)
# PROOFKIT_MAX_PAGES_FULL=50

# =============================================================================
# OPTIONAL - AI Settings
# =============================================================================

# Claude model to use (default: claude-sonnet-4-20250514)
# PROOFKIT_AI_MODEL=claude-sonnet-4-20250514

# Max tokens for AI responses (default: 2000)
# PROOFKIT_AI_MAX_TOKENS=2000

# =============================================================================
# OPTIONAL - Logging
# =============================================================================

# Log level: DEBUG|INFO|WARNING|ERROR (default: INFO)
# PROOFKIT_LOG_LEVEL=INFO
